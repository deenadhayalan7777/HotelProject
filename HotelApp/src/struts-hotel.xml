<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
<package name="hotel" namespace="/hotel" extends="struts-default">
	
		 <interceptors>
			<interceptor class="controller.hotelController.LoginInterceptor"
				name="loginInterceptor" />
			<interceptor-stack name="loginStack">
				<interceptor-ref name="loginInterceptor" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>

 		<default-interceptor-ref name="loginStack"/>

		<global-results>
			<result name="login" >/hotel/Login.jsp</result>
		</global-results>
		<action name ="">
					<result type="redirectAction" >home</result>
		</action>
		
		<action name="home" class="controller.hotelController.HotelAction">  
		<result name="success">/hotel/Hotel.jsp</result> 
		<result name="failure">/hotel/Login.jsp</result>  
		</action> 
		<action name ="signup">
					<result >/hotel/SignUp.jsp</result>
		</action>
		<action name="menu" class="controller.hotelController.MenuAction">  
		<result name="success">/hotel/AddMenu.jsp</result> 
		<result name="failure">/hotel/Login.jsp</result>  
		</action>
		<action name="myorders" class="controller.hotelController.MyOrderAction">  
		<result name="success">/hotel/MyOrders.jsp</result> 
		<result name="failure">/hotel/Login.jsp</result>  
		</action>
		<action name="discount" class="controller.hotelController.DiscountAction">  
		<result name="success">/hotel/Discount.jsp</result> 
		<result name="failure">/hotel/Login.jsp</result>  
		</action>
		<action name="status" class="controller.hotelController.StatusAction">  
		<result name="success" type="redirectAction">home</result> 
		<result name="failure">/hotel/Login.jsp</result>  
		</action>
		<action name="changestockaction" class="controller.hotelController.ChangeStockAction">  
		<result name="success" type="redirectAction">menu</result> 
		<result name="failure" type="redirectAction">home</result>  
		</action>
		<action name="logout" class="controller.hotelController.LogOutAction">  
		<result name="success">/hotel/Login.jsp</result> 
		<result name="failure" type="redirectAction">home</result>  
		</action>
		<action name="loginaction" class="controller.hotelController.LoginAction">  
		<result name="success" type="redirectAction">home</result> 
		<result name="failure">/hotel/Login.jsp</result>  
		</action>  
		<action name="signupaction" class="controller.hotelController.SignUpAction">  
		<result name="success" type="redirectAction">home</result> 
		<result name="failure">/hotel/SignUp.jsp</result>  
		</action>

		<action name="addmenuaction" class="controller.hotelController.AddMenuAction">  
		<result name="success" type="redirectAction">home</result> 
		<result name="failure">/hotel/Hotel.jsp</result>  
		</action>
	
	
</package>
</struts>	