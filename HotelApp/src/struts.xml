<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
<package name="default" namespace="/" extends="struts-default">

<global-results>

        <action name ="index">
			<result >index.jsp</result>
		</action>
		
</global-results>		
		
<action name ="UserLogin" class="controller.userController.PreLogin">
			<result name="success" >/user/Login.jsp</result>
			<result name="alreadyLogged">/user/User.jsp</result>		
</action>
<action name ="UserSignUp">
			<result >/user/SignUp.jsp</result>
</action>		
<action name="UserLoginAction" class="controller.userController.LoginAction">  
<result name="success">/user/User.jsp</result> 
<result name="failure">index.jsp</result>  
</action>  
<action name="UserSignUpAction" class="controller.userController.SignUpAction">  
<result name="success">/user/User.jsp</result> 
<result name="failure">index.jsp</result>  
</action>
<action name="UserAction" class="controller.userController.UserAction">  
<result name="hotelList">/user/HotelList.jsp</result> 
<result name="myOrders">/user/MyOrders.jsp</result> 
<result name="currentOrders">/user/CurrentOrders.jsp</result> 
<result name="logout">index.jsp</result> 
<result name="failure">index.jsp</result>  
</action>



<action name ="AgentLogin" class="controller.agentController.PreLogin">
			<result name="success" >/agent/Login.jsp</result>
			<result name="alreadyLogged">/agent/Agent.jsp</result>		
</action>
<action name ="AgentSignUp">
			<result >/agent/SignUp.jsp</result>
</action>
<action name="AgentLoginAction" class="controller.agentController.LoginAction">  
<result name="success">/agent/Agent.jsp</result> 
<result name="failure">index.jsp</result>  
</action>  
<action name="AgentSignUpAction" class="controller.agentController.SignUpAction">  
<result name="success">/agent/Agent.jsp</result> 
<result name="failure">index.jsp</result>  
</action>



<action name ="HotelLogin" class="controller.hotelController.PreLogin">
			<result name="success" >/hotel/Login.jsp</result>
			<result name="alreadyLogged">/hotel/Hotel.jsp</result>		
</action>
<action name ="HotelSignUp">
			<result >/hotel/SignUp.jsp</result>
</action>
<action name="HotelLoginAction" class="controller.hotelController.LoginAction">  
<result name="success">/hotel/Hotel.jsp</result> 
<result name="failure">index.jsp</result>  
</action>  
<action name="HotelSignUpAction" class="controller.hotelController.SignUpAction">  
<result name="success">/hotel/Hotel.jsp</result> 
<result name="failure">index.jsp</result>  
</action>
</package>

</struts>    