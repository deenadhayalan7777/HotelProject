<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
 
<package name="agent" namespace="/agent" extends="struts-default">



       <interceptors>
			<interceptor class="controller.agentController.LoginInterceptor"
				name="loginInterceptor" />
			<interceptor-stack name="loginStack">
				<interceptor-ref name="loginInterceptor" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>

 		<default-interceptor-ref name="loginStack"/>

		<global-results>
			<result name="login" >/agent/Login.jsp</result>
		</global-results>
		
		<action name ="">
					<result type="redirectAction" >home</result>
		</action>
		<action name ="home" class="controller.agentController.AgentAction">
					
					<result name="success" >/agent/Agent.jsp</result>
					<result name="failure">/agent/Login.jsp</result>				
		</action>
		<action name ="homeaction" class="controller.agentController.AgentAction">
					
					<result name="success" >/agent/Home.jsp</result>
					<result name="failure">/agent/Login.jsp</result>				
		</action>
		<action name ="myorders" class="controller.agentController.MyOrderAction">
					<result name="success" >/agent/MyOrders.jsp</result>
					<result name="failure">/agent/Agent.jsp</result>				
		</action>
		<action name ="logout" class="controller.agentController.LogOutAction">
				    <result name="success" >/agent/Login.jsp</result>
					<result name="failure">/agent/Agent.jsp</result>				
		</action>
		
		<action name ="signup">
					<result >/agent/SignUp.jsp</result>
		</action>
		<action name="loginaction" class="controller.agentController.LoginAction">  
		<result name="success" type="redirectAction">home</result> 
		<result name="input">/agent/Login.jsp</result>  
		<result name="failure">/agent/Login.jsp</result>  
		</action>  
		<action name="signupaction" class="controller.agentController.SignUpAction">  
		<result name="success" type="redirectAction">home</result> 
		<result name="input">/agent/SignUp.jsp</result> 
		<result name="failure" type="redirectAction">signup</result>  
		</action>
	
	    <action name="location" class="controller.agentController.LocationAction">  
		<result name="success" type="redirectAction">home</result> 
		<result name="failure">/agent/SignUp.jsp</result>  
		</action>
		
		<action name="deliveryaction" class="controller.agentController.DeliveryAction">  
		<result name="success" type="redirectAction">home</result> 
		<result name="failure">/agent/SignUp.jsp</result>  
		</action>
		
		<action name="selecthotelaction" class="controller.agentController.SelectHotelAction">  
		<result name="success">/agent/PickUp.jsp</result> 
		<result name="failure">/agent/Agent.jsp</result>  
		</action>
		
		<action name="pickupaction" class="controller.agentController.PickUpAction">  
		<result name="success" type="redirectAction">home</result> 
		<result name="failure">/agent/SignUp.jsp</result>  
		</action>
	
	
</package>

</struts>